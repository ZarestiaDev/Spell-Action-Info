<?xml version="1.0" encoding="iso-8859-1"?>

<root>
	<windowclass name="spell_header" merge="join">
		<sheetdata>
		<!-- Zarestia replacing data to change anchoring -->
			<windowlist name="actionsmini" merge="replace">
				<anchored>
					<top offset="2" />
					<left parent="additional_info" anchor="right" offset="5" />
					<right />
				</anchored>
				<datasource>.actions</datasource>
				<class>spell_action_mini</class>
				<noscroll />
				<readonly />
				<columns width="25" fillwidth="true" />
				<invisible />
			</windowlist>
			
			<string_spell name="shortdescription" merge="replace">
				<anchored height="20">
					<top offset="2" />
					<left anchor="center" offset="0" />
					<right offset="-5" />
				</anchored>
				<empty textres="spell_emptydesc" />
			</string_spell>
		
			<string_spell name="name">
				<anchored>
					<top offset="2" />
					<left parent="hanchor" anchor="right" relation="relative" offset="5" />
					<right parent="action_info" anchor="left" offset="-10" />
				</anchored>
			</string_spell>
		
		<!-- Zarestia adding invsible strings to update changes live -->
			<invis_string_action name="updatecasting" source="castingtime" /> 
			<invis_string_additional name="updatecomponents" source="components" />
			<invis_string_additional name="updaterange" source="range" />
			
		<!-- Zarestia adding label to display the casting time -->
			<label name="action_info" insertbefore="actionsmini">
				<script file="campaign/scripts/show_action_info.lua" />
				<anchored width="65">
					<top offset="2" />
					<left anchor="center" offset="0" />
				</anchored>
			</label>
			
		<!-- Zarestia adding label to display the components -->
			<label name="additional_info" insertbefore="actionsmini">
				<script file="campaign/scripts/show_additional_info.lua" />
				<anchored width="65">
					<top offset="2" />
					<left parent="action_info" anchor="right" offset="5" />
				</anchored>
			</label>
		</sheetdata>
	</windowclass>
	
	<!-- Zarestia adding merge for the display change -->
	<windowclass name="spell_item" merge="join">
		<script file="campaign/scripts/spell.lua" />
	</windowclass>
</root>
